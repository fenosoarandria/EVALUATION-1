@{
    Layout = "_LayoutBackOffice";
}
<main id="main" class="main">
    <style>
        .inner-box {
            position: relative;
            overflow: hidden;
            border-radius: 10px;
            margin-bottom: 20px;
            background-color: #f9f9f9;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease;
        }
        
        .inner-box:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 12px rgba(0, 0, 0, 0.1);
        }
        
        .inner-content {
            padding: 20px;
        }
        
       
        
     
    </style>
    <div class="pagetitle">
        <h1>Devis en cours</h1>
       
    </div><!-- End Page Title -->

    <section class="section dashboard">
        <div class="row">
            <!-- Left side columns -->
            <div class="col-lg-12">
            <div class="row">
              <form asp>
                  <!-- Inner boxes -->
                  <div class="row">
                      @foreach(var devis in ViewBag.Devis)
                      {
                        <div class="col-xxl-3 col-md-3">
                                <a asp-action="DetailDevisEnCours" asp-controller="BackOffice" style="color: black;"  class="card inner-box">
                                    <div class="inner-content">
                                        <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                                            <i class="bi bi-house"></i>
                                        </div>
                                        <h3>@devis.TypeMaison.Nom </h3>
                                        <b>@devis.TypeFinition.Nom</b>
                                        <p>à @devis.Lieu.Nom</p>
                                        <b>Crée le @devis.DateCreation.ToString("dd-MM-yyyy")</b>
                                    </div>
                                </a>
                            </div>
                      }
                  </div>

                      
              </form>
                </div>
            </div><!-- End Left side columns -->
        </div><!-- End row -->
    </section>
</main><!-- End #main -->
