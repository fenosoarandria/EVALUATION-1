@{
    Layout = "_LayoutBackOffice";
}

<main id="main" class="main">

    <div class="pagetitle">
        <h1>Confirm√© </h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="BackOffice" asp-action="Index">Accueil</a></li>
                <li class="breadcrumb-item active">Confirm</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-body">
                        @* <h5 class="card-title">Datatables</h5> *@
                        <!-- Table with stripped rows -->
                        <table class="table ">
                            <thead>
                                <tr>
                                    <th scope="col">Code travaux</th>
                                    <th scope="col">Unite</th>
                                    <th scope="col">Designation</th>
                                    <th scope="col">Prix </th>
                                    <th scope="col"> Confirmer</th>
                                </tr>
                            </thead>    
                            <tbody>
                                <form asp-controller="BackOffice" asp-action="UpdateConfirmer" method="POST">
                                <tr>
                                    <td>
                                         <div class="row mb-3">
                                            <div class="col-sm-10">
                                                <input type="text" name="nom" class="form-control" value="@ViewBag.Travaux.CodeTravaux" disabled >
                                            </div>
                                        </div>
                                    </td>
                                    
                                    <td>
                                         <div class="row mb-3">
                                            <div class="col-sm-10">
                                                <input type="email" name="email" class="form-control" value="@ViewBag.Travaux.Unite.Nom" disabled>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="row mb-3">
                                            <div class="col-sm-10">
                                                <input type="text" name="designation" class="form-control" value="@ViewBag.Travaux.Designation"  >
                                            </div>
                                        </div>
                                    </td>
                                    
                                    <td>
                                         <div class="row mb-3">
                                            <div class="col-sm-10">
                                                <input type="number" name="prix" class="form-control" value="@ViewBag.Travaux.PrixUnitaire" min="0">
                                                <input type="hidden" name="id_travaux" value="@ViewBag.Travaux.Id">
                                            </div>
                                        </div>
                                    </td>                                    
                                    <td><button type="sumbit" class="btn btn-outline-primary open-modal">Confirm</button></td>
                                </tr>
                            </form>
                            </tbody>
                        </table>
                        <!-- End Table with stripped rows -->
                    </div>
                </div>

            </div>
        </div>
    </section>

</main><!-- End #main -->
